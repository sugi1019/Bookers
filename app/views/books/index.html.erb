
<!-- インデックスページでbooksの中身一覧表示 -->

<h1>Books</h1>  

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

  <% @books.each do |book| %>
    
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>

      <td><%= link_to "Show", book_path(book.id) %></td>

      <td><%= link_to "Edit", edit_book_path(book.id) %></td>

      <!-- ですとろい  <td><%= link_to "Edit", edit_book_path(book.id) %></td>  -->
    </tr>

  <% end %>

</table>



<!-- ここから下 新規投稿コード -->

<h2>New book</h2> 
<%= form_with model: @book, url: '/books', method: :post  do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>