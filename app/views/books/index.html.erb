
<!-- インデックスページでbooksの中身一覧表示 -->

<div class ="index">
  <h1>Books</h1>  

  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>

    <% @books.each do |book| %>

      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>

        <td><%= link_to "Show", book_path(book.id) %></td>

        <td><%= link_to "Edit", edit_book_path(book.id) %></td>

        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>

    <% end %>

  </table>



  <!-- ここから下新規投稿コード -->
  <div class ="new-book">
    <h3>New book</h3> 

    <!-- バリデーションエラー検出時 -->
    <% if @book.errors.any? %>
      <div class ="error">
        <div class ="error-box">
          <span><b><%= @book.errors.count %> errors prohibited this book from being saved:</b></span>
          <% @book.errors.full_messages.each do |message| %>
            <ul>
              <li><%= message %></li>
            </ul>
          <% end %>
        </div>
        <%= form_with model: @book, url: '/books', method: :post  do |f| %>
          <div class ="error-new">
            <span class = "error-title">Title</span>
            <%= f.text_field :title %>
            <span class ="error-title">Body</span>
            <%= f.text_area :body %>
          </div
            <p><%= f.submit 'Create Book' %></p>
        <% end %>
      </div>     
      <!-- 通常時  新規投稿 -->
    <% else %>
      <%= form_with model: @book, url: '/books', method: :post  do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Body</p>
        <%= f.text_area :body %>
        <p><%= f.submit 'Create Book' %></p>          
      <% end %>
    <% end %>
  </div>
</div>