
<div class ="show">
  <!-- エディットページでバリデーションエラー検出時 -->

  <%if @book.errors.any? %>
    <h1>Editing Book</h1>
    <div class ="error">
      <div class ="error-box">
        <span><b><%= @book.errors.count %> errors prohibited this book from being saved:</b></span>
        <div class ="error-box-item">
          <% @book.errors.full_messages.each do |message| %>
            <ul>
              <li><%= message %></li>
            </ul>
          <% end %>
        </div>
      </div>
      <%= form_with model: @book do |f| %>
        <div class ="show-error-new">
          <p>Title</p>
          <%= f.text_field :title %>
          <p>Body</p>
          <%= f.text_area :body %>
          <p><%= f.submit 'Update Book' %></p>
          <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
        </div>
      <% end %>
    </div>

      <!-- 通常時showページ -->
  <% else %>
    <p class ="flash"><%= flash[:notice] %></p>
   <div class="show-main">  
      <p><b>Title: </b><%= @book.title %></p>
      <p><b>Body: </b><%= @book.body %></p>
      <%= link_to "Edit", edit_book_path(@book.id) %> | <%= link_to "Back", books_path %>
    </div>
  <% end %>
</div>



